<%- include("includes/head.ejs")%>
<body class="bg-gray-100">
    <div class="max-w-2xl mx-auto p-4">
        <div class="bg-white shadow-md rounded-lg p-6">
            <h1 class="text-2xl font-bold mb-4">Edit Your Chat <%= chatid._id %></h1>
            <p class="text-gray-600 mb-4">Sent From: <%= chatid.from %> | Sent To: <%= chatid.to %></p>
            <form action="/chat/<%= chatid._id %>?_method=PUT" method="post">
                <textarea name="msg" class="w-full border rounded-md p-2 mb-4" placeholder="Message"><%= chatid.msg %></textarea>
                <button class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Save</button>
            </form>
        </div>
    </div>
</body>
