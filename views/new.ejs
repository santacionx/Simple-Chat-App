<%- include("includes/head.ejs")%>
<body class="bg-gradient-to-br from-pink-500 to-purple-500 text-gray-900 font-sans">
    <h1 class="text-3xl font-bold text-center my-8 text-gray-200  text-white-500">New Chat</h1>
    <div class="max-w-md mx-auto bg-white rounded-xl shadow-md p-8">
        <form action="/chat" method="post" class="space-y-4">
            <div>
                <label for="from" class="block text-sm font-semibold mb-1">From</label>
                <input type="text" name="from" id="from" placeholder="From" class="w-full border rounded-md py-2 px-3 text-sm">
            </div>
            <div>
                <label for="to" class="block text-sm font-semibold mb-1">To</label>
                <input type="text" name="to" id="to" placeholder="To" class="w-full border rounded-md py-2 px-3 text-sm">
            </div>
            <div>
                <label for="msg" class="block text-sm font-semibold mb-1">Message</label>
                <textarea name="msg" id="msg" placeholder="Message" class="w-full border rounded-md py-2 px-3 text-sm h-24"></textarea>
            </div>
            <!-- Button with Tailwind CSS classes -->
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out transform hover:scale-105">Save</button>
            <!-- Back link with Tailwind CSS classes -->
            <a href="http://localhost:3000/chat" class="block text-center text-blue-500 hover:text-blue-700 font-semibold mt-2 transition duration-300 ease-in-out transform hover:scale-105">Back</a>
        </form>
    </div>
</body>
</html>
